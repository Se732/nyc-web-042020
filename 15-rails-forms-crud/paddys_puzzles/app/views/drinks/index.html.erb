<h1>Drinks</h1>

<div class="index_container">
  <% @drinks.each do |drink| %>
    <div class="index_tile">
      <h3><%= link_to drink.name, drink_path(drink) %></h3>
      <p><%= drink.category.capitalize %></p>
      <img class="index_img" src="<%= drink.img_url %>" alt="<%= drink.name%>">
    </div>
  <% end %>
</div>