<h1>Drink</h1>

<div class='show-container'>
  <p>Name: <%= @drink.name %></p>
  <p>Category: <%= @drink.category %></p>
  <p>Ounces: <%= @drink.ounces %></p>
  <marquee direction="right" scrollamount="20">
    <img class="show-img" src="<%= @drink.img_url %>" alt="<%= @drink.name%>">
  </marquee>
</div>